{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["*/"]
}
